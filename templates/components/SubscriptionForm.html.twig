<div class="row justify-content-center" {{ attributes }}>
	<h1 class="d-flex justify-content-center fs-3 m-4">Bienvenue parmi nous !</h1>
	{{
    form_start(form, {
      form: form,
      attr: {
        "data-action": "live#action:prevent",
        "data-live-action-param": "save"
      }
    })
  }}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-10">
				<div class="form-floating mb-3">
					{{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
					{{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_errors(form.firstname) }}
          {{form_help(form.firstname)}}
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-10">
				<div class="form-floating mb-3">
					{{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
					{{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_errors(form.lastname) }}
          {{form_help(form.lastname)}}
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-10">
				<div class="form-floating mb-3">
					{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
					{{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_errors(form.email) }}
          {{form_help(form.email)}}
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-10">
				<div class="form-floating mb-3">
					{{ form_widget(form.plainPassword.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
					{{ form_label(form.plainPassword.password.first, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_errors(form.plainPassword.password.first) }}
          {{form_help(form.plainPassword.password.first)}}
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-10">
				<div class="form-floating mb-3">
					{{ form_widget(form.plainPassword.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
					{{ form_label(form.plainPassword.password.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'form-label'}}) }}
          {{ form_errors(form.plainPassword.password.second) }}
          {{form_help(form.plainPassword.password.second)}}
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-10 d-flex justify-content-center">
				<button type="submit" class="btn btn-connexion rounded-pill">
					S'inscrire
				</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
