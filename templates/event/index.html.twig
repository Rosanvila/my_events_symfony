{% extends 'base.html.twig' %}

{% block title %}Événements
{% endblock %}

{% block body %}
	{# Définition des styles de catégories #}
	{% set categoryStyles = [
		{'text': 'var(--bg-orange)', 'border': 'var(--bg-orange)', 'bg': 'transparent'},
		{'text': 'var(--dark-violet)', 'border': 'var(--dark-violet)', 'bg': 'transparent'},
		{'text': 'var(--violet)', 'border': 'var(--violet)', 'bg': 'transparent'},
	] %}

	<div
		class="container mt-4">
		<!-- Barre de recherche -->
		<div class="row mb-4">
			<div class="col-12">
				<form class="d-flex">
					<div class="input-group shadow-sm rounded-pill">
						<input type="text" class="form-control rounded-start-pill" placeholder="Rechercher un événement" aria-label="Rechercher">
						<input type="text" class="form-control" placeholder="Ville" aria-label="Ville">
						<input type="date" class="form-control" aria-label="Dates">
						<button class="btn btn-action rounded-end-pill" type="submit">
							<i class="bi bi-search"></i>
						</button>
					</div>
				</form>
			</div>
		</div>

		<!-- Catégories -->
		<div class="row mb-4">
			<div class="col-12">
				<div class="d-flex flex-wrap gap-2 justify-content-center">
					{% for category in categories %}
						{% set styleIndex = loop.index0 % categoryStyles|length %}
						{% set style = categoryStyles[styleIndex] %}
						<a href="#" class="btn rounded-pill" style="color: {{ style.text }};
							border: 1px solid {{ style.border }};
							transition: all 0.2s ease-in-out;" onmouseover="this.style.backgroundColor='{{ style.border }}'; this.style.color='var(--background)';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='{{ style.text }}';">
							{{ category.name }}
						</a>
					{% endfor %}
				</div>
			</div>
		</div>

		<!-- Liste des événements -->
		<div class="row">
			{% if events is empty %}
				<div class="col-12 text-center">
					<p class="text-muted">Aucun événement n'est disponible pour le moment.</p>
				</div>
			{% else %}
				{% for event in events %}
					<div class="col-md-4 mb-4">
						<div class="card h-100">
							<img src="{{ event.photo }}" class="card-img-top" alt="Image de l'événement">
							<div class="card-body">
								<h5 class="card-title">{{ event.name }}</h5>
								<p class="card-text">
									<i class="bi bi-calendar-event"></i>
									{{ event.startDate|date('d/m/Y H:i') }}
									<br>
									<i class="bi bi-geo-alt"></i>
									{{ event.location }}
								</p>
								<div class="d-flex justify-content-between align-items-center">
									<a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary">
										Voir les détails
									</a>
									<button class="btn btn-outline-primary">
										<i class="bi bi-heart"></i>
									</button>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</div>
{% endblock %}

		{% block footer %}
		{% endblock %}
