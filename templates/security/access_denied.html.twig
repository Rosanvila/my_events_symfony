{% extends 'base.html.twig' %} {% block title %}Accès refusé{% endblock %} {%
block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-danger text-white">
          <h3 class="mb-0">
            <i class="bi bi-exclamation-triangle"></i>
            Accès refusé
          </h3>
        </div>
        <div class="card-body text-center">
          <h4 class="text-danger mb-4">
            Vous n'avez pas les autorisations nécessaires
          </h4>
          <p class="lead">
            {{ exception.message|default('Vous devez être connecté et avoir les droits appropriés pour accéder à cette page.') }}
          </p>

          <div class="mt-4">
            {% if app.user %}
            <a href="{{ path('app_home') }}" class="btn btn-primary me-2">
              <i class="bi bi-house"></i>
              Retour à l'accueil
            </a>
            {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-primary me-2">
              <i class="bi bi-box-arrow-in-right"></i>
              Se connecter
            </a>
            {% endif %}

            <a
              href="{{ path('app_event_index') }}"
              class="btn btn-outline-secondary"
            >
              <i class="bi bi-calendar-event"></i>
              Voir les événements
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
