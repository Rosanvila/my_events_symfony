{% block javascripts %}
<script src="{{ asset('js/tabs.js') }}" type="module"></script>
{% endblock %}

<div class="row justify-content-center">
  <div class="col-10">
    <ul class="nav nav-pills gap-3" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          class="btn btn-action rounded-pill px-4 py-0 active"
          id="pills-sub-tab"
          data-bs-toggle="pill"
          data-bs-target="#pills-sub"
          type="button"
          role="tab"
          aria-controls="pills-sub"
          aria-selected="true"
        >
          S'inscrire
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          class="btn btn-action rounded-pill px-4 py-0"
          id="pills-connect-tab"
          data-bs-toggle="pill"
          data-bs-target="#pills-connect"
          type="button"
          role="tab"
          aria-controls="pills-connect"
          aria-selected="false"
        >
          Se connecter
        </button>
      </li>
    </ul>
  </div>
</div>

<div class="tab-content" id="pills-tabContent">
  <div
    class="tab-pane fade show active"
    id="pills-sub"
    role="tabpanel"
    aria-labelledby="pills-sub-tab"
  >
    {{ component('SubscriptionForm', {
            initialFormData: user,
        }) }}
  </div>
  <div
    class="tab-pane fade"
    id="pills-connect"
    role="tabpanel"
    aria-labelledby="pills-connect-tab"
  >
    
  </div>
</div>
